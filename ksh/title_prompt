if [ -z "${USER}" ] ; then
	USER=$LOGNAME
fi

if [ -n "${USER}" ] && [ ${USER} = root ] ; then
	BASE="#"
else
	BASE="$"
fi

case $TERM in
	xterm*|*rxvt*|cygwin|interix|Eterm|mlterm|kterm|aterm|putty*)
		TITLE=']1;${USER}:${PWD}]2;${USER}:${PWD}'
	;;
	screen*)
		TITLE='k${USER}:${PWD}\\'
	;;
	*)
		TITLE=''
	;;
esac

PS1=$TITLE$'\E[01;32m'"${USER} "$'\E[01;34m''$PWD'" ${BASE} "$'\E[0m'
export PS1
